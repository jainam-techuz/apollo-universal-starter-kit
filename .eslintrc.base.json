{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    },
    "project": "./tsconfig.json"
  },
  "extends": ["airbnb/base", "plugin:import/errors", "eslint:recommended", "plugin:react/recommended", "plugin:@typescript-eslint/recommended", "prettier/@typescript-eslint", "plugin:prettier/recommended"],
  "rules": {
    "react-hooks/rules-of-hooks": "error",
    "import/no-extraneous-dependencies": ["error", { "optionalDependencies": true }],
    "import/extensions": [
      "error",
      "always",
      {
        "js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never"
      }
    ],
    "no-use-before-define": 0,
    "@typescript-eslint/no-use-before-define": 0,
    "@typescript-eslint/no-empty-interface": 0,
    "@typescript-eslint/no-var-requires": 0,
    "@typescript-eslint/no-explicit-any": 0,
    "@typescript-eslint/explicit-function-return-type": 0,
    "@typescript-eslint/camelcase": 0,
    "arrow-body-style": 0,
    "import/prefer-default-export": 0,
    "dot-notation": 0,
    "no-console": 0,
    "react/jsx-key": 0,
    "react/display-name": 0,
    "semi": 2,
    "react/sort-comp": 1,
    "prettier/prettier": [
      "error",
      {
        "printWidth": 120,
        "singleQuote": true,
        "parser": "typescript"
      }
    ]
  },
  "env": {
    "jest": true
  },
  "globals": {
    "fetch": true,
    "window": true,
    "document": true,
    "__DEV__": true,
    "__TEST__": true,
    "__CLIENT__": true,
    "__SERVER__": true,
    "__SERVER_PORT__": true,
    "__SSR__": true,
    "__API_URL__": true,
    "__WEBSITE_URL__": true,
    "__FRONTEND_BUILD_DIR__": true,
    "__DLL_BUILD_DIR__": true
  },
  "plugins": ["@typescript-eslint", "react", "react-hooks", "json", "import", "prettier"],
  "settings": {
    "react": {
      "version": "detect"
    },
    "import/resolver": {
      "node": {
        "extensions": [
          ".ts",
          ".tsx",
          ".web.js",
          ".web.jsx",
          ".native.js",
          ".native.jsx",
          ".js",
          ".jsx"
        ]
      }
    }
  }
}
